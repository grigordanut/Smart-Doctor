<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danut.smartdoctor">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <uses-feature android:name="android.hardware.nfc" />
    <uses-feature android:name="android.hardware.bluetooth" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smart_doctor_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/smart_doctor_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".LoginBy" />
        <activity android:name=".DoctorPage" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".AddPatient" />
        <activity android:name=".DoctorPatientsList" />
        <activity android:name=".ContactUsForm" />
        <activity android:name=".CheckUniqueCode" />
        <activity android:name=".HospitalPage" />
        <activity android:name=".FingerPrintScan" />
        <activity android:name=".HospitalRegistration" />
        <activity android:name=".DoctorRegistration" />
        <activity android:name=".HospitalDoctorsList" />
        <activity android:name=".HospitalsList" />
        <activity android:name=".HospitalsListAddDoctor" />
        <activity android:name=".NFCActivity" />
        <activity android:name=".PatientPage" />
        <activity android:name=".DoctorMedicalRecordList" />
        <activity android:name=".HospitalPatientsList" />
        <activity android:name=".AddMedicalRecord" />
        <activity android:name=".PatientsListAddMedRecord" />
        <activity android:name=".PatientsListShowMedRecord" />
        <activity android:name=".DoctorEditProfile" />
        <activity android:name=".MedicalRecordPatient" />
        <activity android:name=".PatientChangePassword" />
        <activity android:name=".PatientNFC" />
    </application>

</manifest>