<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrandier"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHospReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="Enter the Hospital Register details."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etHospUniqueCodeReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgrinput"
                android:ems="10"
                android:hint="Unique Code"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/HospNameWrapperReg"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etHospNameReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/bgrinput"
                android:ems="10"
                android:hint="Hospital Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/HospEmailWrapper"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/HospNameWrapperReg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etHospEmailReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/bgrinput"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/HospPasswordWrapperReg"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/HospEmailWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etHospPassReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/bgrinput"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/HospConfPassWrapperReg"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/HospPasswordWrapperReg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etHospConfPassReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/bgrinput"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnHospReg"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@id/HospConfPassWrapperReg"
            android:layout_alignLeft="@id/HospConfPassWrapperReg"
            android:layout_marginTop="15dp"
            android:background="@drawable/bgdbutton"
            android:text="Register"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnHospCancelReg"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@id/HospConfPassWrapperReg"
            android:layout_alignRight="@id/HospConfPassWrapperReg"
            android:layout_marginTop="15dp"
            android:background="@drawable/bgdbutton"
            android:text="Cancel"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FFFF"
            android:textSize="22sp" />

    </LinearLayout>
</ScrollView>
